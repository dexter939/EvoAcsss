modules = ["php-8.3", "postgresql-16", "python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["php83", "php83Extensions.pdo_mysql", "php83Extensions.redis", "php83Extensions.soap", "php83Packages.composer", "prosody", "protobuf"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Queue Worker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Prosody XMPP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ACS Server"

[[workflows.workflow]]
name = "Queue Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan queue:work --sleep=3 --tries=3 --timeout=120"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Prosody XMPP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "prosody --config prosody.cfg.lua"
waitForPort = 6000

[[workflows.workflow]]
name = "ACS Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "SESSION_DRIVER=database SESSION_SAME_SITE=none SESSION_SECURE_COOKIE=true SESSION_PARTITIONED_COOKIE=true php artisan config:clear && php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

